<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.AddEventActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

         <android.support.design.widget.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:hint="Nama Event">

             <android.support.design.widget.TextInputEditText
                 android:id="@+id/inputEvent"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:inputType="text" />
         </android.support.design.widget.TextInputLayout>

         <android.support.design.widget.TextInputLayout
             android:id="@+id/layoutInputDateStart"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:hint="Tanggal Mulai">

             <android.support.design.widget.TextInputEditText
                 android:id="@+id/inputDateStart"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:clickable="true"
                 android:inputType="date" />
         </android.support.design.widget.TextInputLayout>

         <android.support.design.widget.TextInputLayout

             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:hint="Jam Mulai">

             <android.support.design.widget.TextInputEditText
                 android:id="@+id/inputTimeStart"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:inputType="datetime" />
         </android.support.design.widget.TextInputLayout>

         <android.support.design.widget.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:hint="Tanggal Selesai">

             <android.support.design.widget.TextInputEditText
                 android:id="@+id/inputDateEnd"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:clickable="true"
                 android:inputType="date" />
         </android.support.design.widget.TextInputLayout>

         <android.support.design.widget.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:hint="Lokasi">

             <android.support.design.widget.TextInputEditText
                 android:id="@+id/inputLokasi"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:inputType="text" />
         </android.support.design.widget.TextInputLayout>

         <android.support.design.widget.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:hint="Deskripsi">

             <android.support.design.widget.TextInputEditText
                 android:id="@+id/inputDeskripsi"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:inputType="textMultiLine" />
         </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgPosterEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bnw" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonPilihImg"
                android:onClick="buttonPilihImg"
                android:background="@color/colorPrimary"
                android:textColor="#FFFF"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Choose File" />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="10dp"
                android:id="@+id/buttonUpload"
                android:onClick="buttonUpload"
                android:textColor="#FFFF"
                android:layout_marginLeft="5dp"
                android:background="@color/colorAccent"
                android:text="Upload" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tambahEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#74b72e"
            android:padding="10dp"
            android:text="Tambah Event"
            android:onClick="klikTambahEvent"
            android:textColor="#ffffff" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>